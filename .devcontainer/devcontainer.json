{
  "name": "judger",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "runArgs": ["--cgroupns=host"],
  "mounts": [
    "source=/sys/fs/cgroup,target=/sys/fs/cgroup,type=bind,consistency=consistent"
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "EditorConfig.EditorConfig",
        "ms-python.python",
        "rust-lang.rust-analyzer",
        "GitHub.copilot"
      ]
    }
  }
}
